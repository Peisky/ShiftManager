<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_blue">
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
     
        />
    <LinearLayout
        android:id="@+id/WeekTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/spinner1"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/txtTable_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Sun"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/txtdark_blue" />

        <TextView
            android:id="@+id/txtTable_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Mon"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/txtTable_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Tue"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/txtTable_Created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Wed"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Thu"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Fri"
           	android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_blue"
            android:gravity="center_horizontal"
            android:text="@string/Week_Sat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/txtdark_blue" />

    </LinearLayout>

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="7" 
        android:layout_below="@+id/WeekTitle"
        android:horizontalSpacing="1px"
        android:verticalSpacing="1px"
       	android:scrollbars="none"
        android:background="@color/bg_blue">

    </GridView>

    

</RelativeLayout>
