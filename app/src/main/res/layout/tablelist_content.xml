<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false" >

    <CheckBox
        android:id="@+id/cbTablelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:focusable="false"
        android:layout_alignParentLeft="true"
        android:button="@drawable/del_checkbox"
        android:background="@drawable/del_checkbox"
        android:text="" />
	
   	<LinearLayout
   	    	android:layout_toRightOf="@+id/cbTablelist"
   	    	android:layout_below="@+id/txtTable_Name"
   	    	android:orientation="horizontal"
   	    	android:layout_alignBaseline="@+id/cbTablelist"
   	    	android:layout_width="wrap_content"
   	    	android:layout_height="wrap_content"
   	    	
   	    	>
   	    	<TextView
	          android:id="@+id/txtTable_Max"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_gravity="center_horizontal"
	          android:textSize="@dimen/txt_sift_talbe_size"
	          android:clickable="false"
	          android:text="MAX:"
	          android:textColor="@color/yellow"
	          />
   	    	<TextView 
   	    	  android:id="@+id/txtTable_Max_score"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:clickable="false"
	          android:textColor="@color/White"
	          android:text=""
	          android:textSize="@dimen/txt_sift_talbe_size"
	          android:layout_gravity="center_horizontal"
   	    	    />
	      <TextView
	          android:id="@+id/txtTable_Ave"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:clickable="false"
	          android:text="AVE:"
	          android:textSize="@dimen/txt_sift_talbe_size"
	          android:textColor="@color/txtnotsodarkblue"
	          android:layout_gravity="center_horizontal"
	        	/>
   	    	 <TextView
	          android:id="@+id/txtTable_Ave_score"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:clickable="false"
	          android:textColor="@color/White"
	          android:text=""
	          android:textSize="@dimen/txt_sift_talbe_size"
	          android:layout_gravity="center_horizontal"
	          />
   	    	<TextView
	          android:id="@+id/txtTable_Min"
	         android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:clickable="false"
	          android:text="MIN:"
	          android:textSize="@dimen/txt_sift_talbe_size"
	          android:textColor="@color/txtdark_blue"
	          android:layout_gravity="center_horizontal"
	         	 />
   	    	
   	    	<TextView
	          android:id="@+id/txtTable_Min_score"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:clickable="false"
	          android:textColor="@color/White"
	          android:text=""
	         android:textSize="@dimen/txt_sift_talbe_size"
	          android:layout_gravity="center_horizontal"
	         />
   	    
   	</LinearLayout>
    <TextView
        android:id="@+id/txtTable_Created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_toRightOf="@+id/cbTablelist"
       	android:layout_below="@+id/txtTable_id"
        android:clickable="false"
        android:text="created"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceSmall" />

      


      <TextView
          android:id="@+id/txtTable_note"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
		android:layout_below = "@+id/txtTable_Name"
          android:layout_toRightOf="@+id/txtTable_id"
          android:clickable="false"
          android:text="Note"
          android:visibility="invisible"
          android:textAppearance="?android:attr/textAppearanceSmall" />

      

      <TextView
          android:id="@+id/txtTable_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
		  android:layout_below = "@+id/txtTable_Name"
          android:layout_toRightOf="@+id/cbTablelist"
          android:clickable="false"
          android:text="ID"
          android:visibility="invisible"
          android:textAppearance="?android:attr/textAppearanceSmall" />

      <TextView
          android:id="@+id/txtTable_Name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          
          android:layout_toRightOf="@+id/cbTablelist"
          android:clickable="false"
          android:text="AAAAAAA"
		  android:textSize="@dimen/txt_sift_talbe_size"
      	
           />

</RelativeLayout>
